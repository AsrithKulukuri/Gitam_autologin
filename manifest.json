{
  "manifest_version": 3,
  "name": "GITAM AutoPass Pro",
  "version": "1.4",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://login.gitam.edu/*"],
      "js": ["inject.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["https://login.gitam.edu/*"],
      "js": ["content.js"],
      "world": "ISOLATED",
      "run_at": "document_end"
    }
  ]
}